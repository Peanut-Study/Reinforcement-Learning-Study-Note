    "def moving_average(x, window):\n",
    "    x = np.array(x, dtype=float)\n",
    "    ma = np.zeros_like(x)  # 存放结果\n",
    "    for i in range(len(x)):\n",
    "        start = max(0, i - window + 1)\n",
    "        end = i + 1\n",
    "        ma[i] = x[start:end].mean()   # 只用窗口内现有元素求平均\n",
    "    return ma\n",
